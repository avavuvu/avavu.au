<style scoped>
    body, html {
        margin: 0;
        overflow: hidden; 
        position: relative;
        height: 100vh;
        width: 100vw;
    }

    body::before, .box::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 1000vh; /* 10x viewport height for seamless looping */
        background: repeating-linear-gradient(
            to bottom,
            rgb(116, 116, 116),
            rgb(178, 178, 178) 50%,
            rgb(116, 116, 116) 100%
        );
        background-size: 100% 20vh; /* One "segment" = 20% of 1000vh */
        animation: scrollBackground 20s linear infinite;
        z-index: -1;
    }

    @media (prefers-reduced-motion) {
        :global(body::before, .box::before) {
            animation: none;
        }
    }


    .box::before {
        animation: scrollBackground 20s linear infinite reverse;
    }

    @keyframes scrollBackground {
        from {
            transform: translateY(0);
        }
        to {
            transform: translateY(-80vh); /* Moves up by 80% of viewport */
        }
    }

    .box {
        position: absolute;
        width:100vw;
        height:100vh;
        -webkit-mask:url("/assets/star.svg") center;
                mask:url("/assets/star.svg") center;
            
    }

    a {
        text-decoration-line: underline;
        cursor: pointer;
    }

    a:hover, a:active {
        background-color: rgb(130, 156, 208);
    }

    div > * {
        mix-blend-mode: difference;
        transform: translate3d(0,0,0);
        color: white;
        letter-spacing: -.1rem;
    }
</style>

